<%= form_for actor, :url => actors_path do |f| %>
  <% if actor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>

      <ul>
      <% actor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <%= fields_for staredin do |u|%>
      <div class="field">
        <%= u.label :movie_id %>
        <%= #f.text_field :movie_id
        select("staredin", "movie_id", Movie.all.collect {|m| [ m.title, m.id ] }, {include_blank: 'None'}) %>
      </div>

      <div class="field">
        <%= u.label :date %>
        <%= u.datetime_select :date %>
      </div>

  <% end %>

  <div class="actions">
    <%= f.submit "Submit"%>
  </div>
<% end %>
